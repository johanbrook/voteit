<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @voting.title %>
</p>

<p>
  <b>Description:</b>
  <%= @voting.description %>
</p>

<% if @voting.open %>
	<% unless @voting.vote_alternatives.blank?%>
<p>
	<b>Vote alternatives:</b>
</p>

<ul>
	<% @voting.vote_alternatives.each do |alt| %>
	<li>
		<h3><%= alt.title%></h3>
		<p><%= link_to 'Vote', meeting_voting_vote_path(alt.voting.meeting, alt.voting, :alt => alt.id)%>
			(<%= alt.votes%> votes)</p>
	</li>
	<% end %>
</ul>

	<% else %>

	<p>No alternatives or voting is closed</p>

	<% end %>

<% else %>

<p>Voting is closed</p>

<% end%>

<p>
	<%= link_to 'Add Vote alternative', new_voting_vote_alternative_path(@voting) %>
</p>

<%= link_to 'Edit', edit_voting_path(@voting) %> |
<%= link_to 'Back', meeting_path(@voting.meeting) %>
